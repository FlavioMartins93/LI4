@page "{handler?}/{recipeid?}"
@model AssistentFinalPageModel
@{
    ViewData["Title"] = "Receita finalizada";
}

@section Scripts
    {
}

<h4>Receita finalizada</h4>
<hr />
<p>@Model.recipeid</p>


<div class="row">
    <div class="col-lg-8 col-lg-offset-2">
        <div class="well">
            <form asp-page-handler="AddClassification" asp-page="AssistentFinalPage" method="post" enctype="multipart/form-data">

                <section>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Rank, new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.Rank, new { @class = "form-control", @type = "number" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Comment.Text, new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.Comment.Text, new { @class = "form-control" })
                    </div>



                    <div class="form-group">
                        <input type="submit" value="Confirmar" class="btn btn-default pull-right" />
                    </div>
                </section>
            </form>
        </div>
    </div>
</div>







